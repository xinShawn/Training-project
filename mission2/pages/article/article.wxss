/*article.css  */
.title {
  font-weight: bold;
  text-align: center;
  font-size: 40rpx;
}
.time {
  text-align: center;
  color: lightgray;
  font-size: 30rpx
}
.cover {
  text-align: center
}
.content {
  margin: 40rpx 0;
}
.content image, .cover image {
  width: 100%
}
.content .text-wrapper {
  padding: 0 4rpx;
}
.content .img-wrapper {
  margin: 20rpx 0;
  text-align: center;
}
.line {
  height: 2rpx;
  background: #000000;
  margin: 20rpx 4rpx;
}
.recommend-title {
  margin: 20px 4rpx;
  font-weight: bold;
}
.recommend-content {
  color: blue;
  margin: 10rpx
}
.btn-group {
  position: fixed;
  bottom: 10%;
  right: 5%;
  border: 1px #000000 solid;
  border-radius: 10rpx;
  background: #ffffff;
}
.btn-group view {
  font-size: 40rpx;
  line-height: 40rpx;
}
.btn-group view:last-child {
   border-top: 1px #000000 solid 
}
